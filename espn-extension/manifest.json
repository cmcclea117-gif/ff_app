{
  "manifest_version": 3,
  "name": "ESPN Fantasy Roster Connector",
  "version": "2.0.0",
  "description": "Automatically connect your ESPN Fantasy Football roster to fantasy dashboards",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://fantasy.espn.com/*",
    "https://*.espn.com/*",
    "https://*.github.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.github.io/*",
        "http://localhost:*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://fantasy.espn.com/*"
      ],
      "js": ["espn-page-helper.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
